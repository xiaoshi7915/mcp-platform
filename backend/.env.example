# 环境设置
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_APP=app.py
FLASK_RUN_PORT=5005

# 数据库配置
# 开发环境使用SQLite
DATABASE_URL=sqlite:///mcp_platform.db

# 生产环境使用MySQL（取消注释以启用）
# DATABASE_URL=mysql+pymysql://username:password@host:3306/dbname?charset=utf8mb4

# 应用密钥 (生产环境请使用强随机密钥)
SECRET_KEY=your_secret_key_here

# 工具配置
MCP_TOOLS_DIR=./mcp_tools
LOG_DIR=./logs
TEMPLATE_DIR=./templates

# 分页设置
PER_PAGE=10
